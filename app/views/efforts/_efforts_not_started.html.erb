<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Bib&num;</th>
    <th>Category</th>
    <th>From</th>
    <th>Get Notifications</th>
  </tr>
  </thead>
  <tbody>
  <% @event_display.unstarted_efforts.each do |effort| %>
      <td><strong><%= link_to effort.full_name, effort_path(effort) %></strong></td>
      <td><%= effort.bib_number %></td>
      <td><%= effort.bio_historic %></td>
      <td><%= effort.state_and_country %></td>
      <td>
        <%= div_for(effort.participant) do %>
            <%= link_to_toggle_email_subscription(effort.participant) %>
            <%= link_to_toggle_sms_subscription(effort.participant) %>
        <% end %>
      </td>
      </tr>
  <% end %>
  </tbody>
</table>