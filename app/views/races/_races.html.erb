<%# Requires parameter races %>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Details</th>
  </tr>
  </thead>
  <tbody>
  <% races.each do |race| %>
      <tr>
        <td><strong><%= link_to race.name, race_path(race) %></strong></td>
        <td><%= pluralize(race.events.size, 'event') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
