<div class="row">
  <div class="col-xs-10">
    <% if @aid_station_detail.dropped_here_live_efforts.empty? %>
        <h4><%= "No efforts dropped at #{@aid_station_detail.split_name} as of #{l(Time.now.in_time_zone, format: :full_with_weekday)} at #{l(Time.now.in_time_zone, format: :military)}" %></h4>
    <% else %>
        <h4><%= "Efforts dropped at #{@aid_station_detail.split_name} as of #{l(Time.now.in_time_zone, format: :full_with_weekday)} at #{l(Time.now.in_time_zone, format: :military)}" %></h4>
        <table class="table table-condensed table-striped">
          <thead>
          <tr>
            <th class="text-center">Bib</th>
            <th>Name</th>
            <th>Category</th>
            <th>From</th>
            <th class="text-center">Valid Reported Time<br/><%= "Prior To #{@aid_station_detail.split_name}" %></th>
            <th class="text-center"><%= "Recorded at #{@aid_station_detail.split_name}" %><br/>In / Out</th>
          </tr>
          </thead>
          <tbody>
          <% @aid_station_detail.dropped_effort_rows.each do |row| %>
              <tr>
                <td class="text-center"><%= row.bib_number %></td>
                <td class="text-nowrap">
                  <strong><%= link_to row.full_name, effort_path(row.id) %></strong></td>
                <td class="text-nowrap"><%= row.bio_historic %></td>
                <td class="text-nowrap"><%= row.state_and_country %></td>
                <td class="text-center text-nowrap"><%= row.prior_valid_display_data %></td>
                <td class="text-center text-nowrap"><%= [l(row.recorded_in_day_and_time, format: :day_and_military), l(row.recorded_out_day_and_time, format: :day_and_military)].join(' / ') %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
</div>