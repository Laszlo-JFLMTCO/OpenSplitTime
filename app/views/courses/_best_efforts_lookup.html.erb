<%= form_tag best_efforts_course_path(@best_display), method: :get do %>
    <%= hidden_field_tag 'split1', @best_display.begin_id %>
    <%= hidden_field_tag 'split2', @best_display.end_id %>
    <%= hidden_field_tag 'filter[gender]', @best_display.gender_text %>
    <div class="row">
      <div class="col-xs-6">
        <div class="input-group">
          <span class="input-group-btn">
            <%= text_field_tag 'filter[search]',
                               @best_display.search_text,
                               placeholder: 'First name, last name, state, or country',
                               autofocus: true,
                               class: 'form-control search-box input-sm' %>
            <%= button_tag(type: :submit, class: 'btn btn-sm btn-success') do %>
                <i class='fa fa-search'></i> Find someone
            <% end %>
          </span>
        </div>
      </div>
    </div>
<% end %>
