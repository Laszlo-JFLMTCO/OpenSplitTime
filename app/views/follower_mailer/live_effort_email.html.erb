<!doctype html>
<html lang="en">
<head>
  <meta content='text/html; charset=UTF-8' http-equiv="Content-Type"/>
</head>
<body>
<%= "Hello #{@follower.first_name}," %><br/>
<%= "The following new times were reported for #{@effort.full_name} at #{@effort.event_name}:" %>
<% @split_times.each do |split_time| %>
    <p>
      <%= "#{split_time.split_name} at #{day_time_full_format(split_time.day_and_time)}" %>
      <%= " with a pacer" if split_time.pacer %>
      <%= " and dropped there" if @effort.dropped_split_id == split_time.split_id %>
    </p>
<% end %>

</body>
</html>