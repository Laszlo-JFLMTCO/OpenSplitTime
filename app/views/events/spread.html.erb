<div class="row">
  <h2><%= @spread_display.name %></h2>
</div>
<div class="row">
  <strong><%= "#{@spread_display.start_time.to_formatted_s(:long)}" %></strong><br/>
  <strong>Course:</strong>
  <%= link_to @spread_display.course_name, course_path(@spread_display.course) %>
  <% if @spread_display.race %> |
      <strong>Race:</strong>
      <%= link_to @spread_display.race_name, race_path(@spread_display.race) %>
  <% end %>
</div>
<hr>
<div class="row">
  <%= link_to '<< Back to event', event_path(@spread_display.event), class: 'btn btn-sm btn-default' %>
</div>
<hr>
<div class="row">
  <table class="table table-condensed table-striped">
    <thead>
    <tr>
      <th>Bib #</th>
      <th>Name</th>
      <th>Category</th>
      <th>From</th>
      <% @spread_display.splits.each do |split| %>
          <th><%= split.name %></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @spread_display.effort_times_rows.each do |row| %>
        <tr>
          <td><%= row.bib_number %></td>
          <td><strong><%= link_to row.full_name, effort_path(row.effort) %></strong></td>
          <td><%= row.bio_historic %></td>
          <td><%= row.state_and_country %></td>
          <% row.time_clusters.each do |cluster| %>
              <td>
                <%= cluster.times_from_start.map { |time| time_format_hhmm(time) }.join(' / ') %>
              </td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>