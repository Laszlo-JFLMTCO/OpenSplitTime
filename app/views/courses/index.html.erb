<h1 align="center">Listing Courses</h1>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <%= link_to 'Create New Course', new_course_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
<hr>
<% @courses.each do |course| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="object-list-body">
          <strong><%= link_to course.name, course_path(course) %></strong>
          <small><%= pluralize(course.splits.count, "split") if course.splits %></small>
          <div class="object-list-actions">
            <%= link_to 'Edit Course', edit_course_path(course), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete Course', course_path(course), class: "btn btn-xs btn-danger",
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %>
          </div>
        </div>
      </div>
    </div>
<% end %>
