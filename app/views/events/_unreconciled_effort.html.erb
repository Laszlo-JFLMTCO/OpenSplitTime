<%# Requires parameters effort, matching_participant %>

<tr>
  <td><%= effort.personal_info %></td>
  <td>
    <%# Blue button for exact matches, white button for close matches %>
    <% if exact_match %>
        <%= link_to 'Same person >>',
                    associate_participant_effort_path(effort,
                                                      participant_id: exact_match.id,
                                                      event_id: @event.id),
                    method: :put,
                    class: "btn btn-xs btn-primary" %>
    <% elsif close_match %>
        <%= link_to 'Same person >>',
                    associate_participant_effort_path(effort,
                                                      participant_id: close_match.id,
                                                      event_id: @event.id),
                    method: :put,
                    class: "btn btn-xs btn-default" %>
    <% end %>
  </td>
  <td>
    <% if exact_match %>
        <%= exact_match.personal_info %>
    <% elsif close_match %>
        <%= close_match.personal_info %>
    <% end %>
  </td>
  <td>
    <%= link_to 'New participant',
                create_from_efforts_participants_path(effort_ids: effort.id, event_id: @event.id),
                method: :post,
                class: "btn btn-xs btn-success" %>
  </td>
</tr>