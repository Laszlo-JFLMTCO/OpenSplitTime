<h1 align="center"><%= @split.name %></h1>
<h4 align="center"><%= "#{pdu('singular').titleize} #{d(@split.distance_from_start)}" %></h4>
<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <%= @split.description %>
  </div>
</div>
<div class="well col-xs-8 col-xs-offset-2">
  <ul class="object-list-body">
    <li>
      <strong>Course:</strong>
      <%= link_to @split.course.name, course_path(@split.course) %>
    </li>
    <li>
      <strong>Vertical Gain From Start:</strong>
      <%= elevation_format(@split.vert_gain_from_start) %>
    </li>
    <li>
      <strong>Vertical Loss From Start:</strong>
      <%= elevation_format(@split.vert_loss_from_start) %>
    </li>
  </ul>
  <div class="article-actions">
    <%= link_to '<< View course', course_path(@split.course), class: "btn btn-sm btn-default" %>
    <%= link_to '< Back', :back, class: "btn btn-sm btn-default" %>
    <% if @current_user && @current_user.authorized_to_edit?(@split) %>
        <%= link_to 'Edit this split', edit_split_path(@split), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete this split',
                    split_path(@split),
                    method: :delete,
                    data: {confirm: "Are you sure?"},
                    class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
  <hr>
  <% if @split.location_id? %>
      <strong>Location:</strong>
      <%= link_to @split.location.name, location_path(@split.location) %> |
      <%= "Elevation: #{elevation_format(@split.location.elevation)}" %>
      <hr>
      <div id="map" style="width: 550px; height: 350px;"></div>

      <script>
        $(document).ready(function () {
          var locations = <%= Location.joins(:splits).where(splits: {course_id: @split.course_id}).first(2).to_json.html_safe %>;    // pass ruby variable to javascript

              gmap_show(locations, {latitude: locations[0].latitude, longitude: locations[0].longitude});    // init show map for company card (only print marker)
        });
      </script>
  <% else %>
      <%= link_to "Create Location", create_location_split_path(id: @split.id),
                  method: :post,
                  class: "btn btn-sm btn-success" %>
      <%= link_to "Select Location", assign_location_split_path(split: @split.id),
                  class: "btn btn-sm btn-success",
                  referrer_path: split_path(@split) %>

  <% end %>

</div>