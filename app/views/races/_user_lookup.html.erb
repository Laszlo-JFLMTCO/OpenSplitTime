<div class="row">
  <%= form_tag stewards_race_path, method: :get do %>
      <div class="col-xs-8">
        <%= text_field_tag :search_param,
                           params[:search_param],
                           placeholder: 'email',
                           autofocus: true,
                           class: 'form-control search-box input-sm' %>
      </div>
      <div class="col-xs-2">
        <%= button_tag(type: :submit, class: 'btn btn-sm btn-success') do %>
            <i class='fa fa-search'></i> Find user
        <% end %>
      </div>
  <% end %>
</div>
<% if @user %>
    <table class="table table-condensed table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @user.full_name %></td>
        <td><%= @user.email %></td>
        <td>
          <%= link_to "Add",
                      add_steward_race_path(@race, user_id: @user.id),
                      :method => :put,
                      :class => 'btn btn-xs btn-success' %>
        </td>
      </tr>
      </tbody>
    </table>
<% end %>