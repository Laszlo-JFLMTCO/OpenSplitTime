<%# Requires parameter obj(collection) %>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% obj.each do |course| %>
      <tr>
        <td><strong><%= link_to course.name, course_path(course) %></strong></td>
        <td><%= pluralize(course.splits.count, 'split') %></td>
        <% if @current_user.authorized_to_edit?(course) %>
            <td>
              <%= link_to 'Edit Course', edit_course_path(course), class: "btn btn-xs btn-primary" %>
              <%= link_to 'Delete Course', course_path(course), class: "btn btn-xs btn-danger",
                          method: :delete,
                          data: {confirm: 'Are you sure?'} %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
