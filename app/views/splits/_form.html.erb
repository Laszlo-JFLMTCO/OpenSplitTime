<%= render 'shared/errors', obj: @split %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@split, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.hidden_field :course_id, value: @course.id %>
            <h4><%= @course.name %></h4>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :name, class: "form-control", placeholder: "Split name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Split description" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :kind %>
          </div>
          <div class="col-sm-8">
            <%= f.select :kind, Split.kinds.keys.map { |kind| [kind.titleize, kind] },
                         {prompt: true}, {class: "dropdown-select-field"} %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :location_id %>
          </div>
          <div class="col-sm-8">
            <%= collection_select(:split, :location_id, Location.all, :id, :name,
                                  {prompt: true}, {class: "dropdown-select-field"}) %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :distance_from_start %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :distance_from_start, class: "form-control", placeholder: "Meters" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :sub_order %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :sub_order, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :vert_gain_from_start %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :vert_gain_from_start, class: "form-control", placeholder: "Meters" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :vert_loss_from_start %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :vert_loss_from_start, class: "form-control", placeholder: "Meters" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit(@split.new_record? ? "Create Split" : "Update Split", class: 'btn btn-primary btn-large') %>
          </div>
        </div>
        <div class="col-xs-4 col-xs-offset-2">
          [ <%= link_to 'Cancel', request.referer %> ]
        </div>
    <% end %>
  </div>
</div>
