<h1 align="center"><%= @course.name %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= @course.description %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-6 col-xs-offset-2">
    <div class="object-list-actions">
      <%= link_to 'Create New Split', new_split_path(course_id: @course.id), class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h4>Splits on this course:</h4>
  </div>
</div>

<%= render 'splits/split', obj: @course_splits, page: "courses/show" %>
