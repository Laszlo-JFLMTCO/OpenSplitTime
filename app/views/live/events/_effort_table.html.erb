<div class="row">
  <div class="col-xs-12">
    <h3>
      <%= @effort_show.full_name %>
      <%= "(#{@effort_show.bib_number})" if @effort_show.bib_number %>
      • <%= @effort_show.event_name %>
    </h3>
    <% overall_place, gender_place = @effort_show.combined_places %>
    <h4><%= "#{@effort_show.finish_status} • #{overall_place.ordinalize} Place • #{gender_place.ordinalize} #{@effort_show.gender.titleize}" %></h4>
  </div>
</div>

<hr>

<% if @effort_show.split_rows.count > 0 %>
    <%= render 'split_times/split_times_list_compact' %>
<% end %>
