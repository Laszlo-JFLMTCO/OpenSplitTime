<h1 align="center"><%= @location.name %></h1>
<h4 align="center">
  <%= "Elevation #{@location.elevation}, Lat/Lon: #{@location.latitude.abs}" %>
  <%= @location.latitude >= 0 ? "째N" : "째S" %>
  <%= ", #{@location.longitude.abs}" %>
  <%= @location.longitude >= 0 ? "째E" : "째W" %>
</h4>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= @location.description %>
  </div>
</div>
<div class="well col-xs-8 col-xs-offset-2">
  <div id="map" style="width: 550px; height: 350px;"></div>

  <script>
    $(document).ready(function () {
      var location=<%= @location.to_json.html_safe %>    // pass ruby variable to javascript
          gmap_show(location);    // init show map for company card (only print marker)
    });
  </script>

  <hr>
  <div class="article-actions">
    <%= link_to 'Edit this location', edit_location_path(@location), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete this location', location_path(@location), method: :delete,
                data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all locations', locations_path, class: "btn btn-xs btn-primary" %>
  </div>
</div>
