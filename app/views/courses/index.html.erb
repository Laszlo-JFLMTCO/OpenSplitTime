<h1>Listing Courses</h1>
<%= link_to 'Add Course', new_course_path %>
<% @courses.each do |course| %>
    <div class="row">
      <div class="col-xs-8">
        <div class="well well-lg">
          <div class="object-list-title">
            <%= link_to course.name, course_path(course) %>
          </div>
          <div class="object-list-body">
            <%= truncate(course.description, length: 150) %>
          </div>
          <div class="object-list-actions">
            <%= link_to 'Edit Course', edit_course_path(course), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete Course', course_path(course), class: "btn btn-xs btn-danger",
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %>
          </div>
        </div>
      </div>
    </div>
<% end %>
