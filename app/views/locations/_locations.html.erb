<%# Requires parameter locations %>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Details</th>
  </tr>
  </thead>
  <tbody>
  <% locations.each do |location| %>
      <tr>
        <td><strong><%= link_to location.name, location_path(location) %></strong></td>
        <td>
          <%= "Elevation: #{location.elevation.nil? ? '[Unknown]' : location.elevation}, Lat/Lon: " %>
          <% if location.latitude.nil? %>
              [Unknown]
          <% else %>
              <%= location.latitude.abs %>
              <%= location.latitude >= 0 ? "째N" : "째S" %>
          <% end %>
          <% if location.longitude.nil? %>
              [Unknown]
          <% else %>
              <%= location.longitude.abs %>
              <%= location.longitude >= 0 ? "째E" : "째W" %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
