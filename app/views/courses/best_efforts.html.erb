<div class="row">
  <div class="col-xs-12">
    <h2><%= "All-time best efforts on #{@course.name} (#{params[:gender]})" %></h2>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <% if @course.events.count > 0 %>
        <strong><%= "Searched #{pluralize(@course.events.count, 'event')} from #{@course.earliest_event_date.to_date.to_formatted_s(:long)} to #{@course.latest_event_date.to_date.to_formatted_s(:long)}" %></strong><br/>
    <% else %>
        <strong>No events have been run on this course.</strong>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-6">
    <div class="article-actions">
      <%= link_to '<< Back to course', course_path(@course), class: "btn btn-sm btn-default" %>
      <%= link_to 'Best efforts by segment >>', segment_picker_course_path(@course), class: "btn btn-sm btn-default" %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="text-right">
      <%= link_to 'Combined', best_efforts_course_path(@course, gender: 'combined'), class: 'btn btn-sm btn-default' %>
      <%= link_to 'Male', best_efforts_course_path(@course, gender: 'male'), class: 'btn btn-sm btn-default' %>
      <%= link_to 'Female', best_efforts_course_path(@course, gender: 'female'), class: 'btn btn-sm btn-default' %>
    </div>
  </div>
</div>

<% if @efforts.count > 0 %>
    <div class="row">
      <div class="col-xs-8">
        <%= will_paginate(@efforts, inner_window: 2, outer_window: 0) %>
      </div>
    </div>

    <%= render 'efforts/effort_list', items: @efforts %>

    <div class="row">
      <div class="col-xs-8">
        <%= will_paginate(@efforts, inner_window: 2, outer_window: 0) %>
      </div>
    </div>
<% end %>