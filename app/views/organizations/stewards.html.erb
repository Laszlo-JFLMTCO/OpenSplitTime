<% content_for :title do %>
    <% "OpenSplitTime: Add or remove stewards - #{@organization.name}" %>
<% end %>
<div class="row">
  <div class="col-xs-8">
    <h2><%= "#{@organization.name}: Add or remove stewards" %></h2>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-6">
    <%= link_to '<< Show organization', organization_path(@organization), class: "btn btn-sm btn-default" %>
    <%= link_to '< Back', :back, class: "btn btn-sm btn-default" %>
  </div>
</div>
<hr>

<%= render 'user_lookup' %>

<% if @organization.stewards.present? %>
    <div class="row">
      <div class="col-xs-8">
        <h4>Stewards associated with this organization:</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <%= render 'stewards_list' %>
      </div>
    </div>
<% else %>
    <h4>This organization has no stewards. Search to add a trusted user.</h4>
<% end %>