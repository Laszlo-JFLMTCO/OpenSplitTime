<div class="row">
  <div class="col-xs-10">
    <% if @aid_station_detail.missed_effort_data.empty? %>
        <h4><%= "No efforts missed at #{@aid_station_detail.split_name} as of #{l(Time.now.in_time_zone, format: :full_with_weekday)} at #{l(Time.now.in_time_zone, format: :military)}" %></h4>
    <% else %>
        <h4><%= "Efforts missed at #{@aid_station_detail.split_name} as of #{l(Time.now.in_time_zone, format: :full_with_weekday)} at #{l(Time.now.in_time_zone, format: :military)}" %></h4>
        <table class="table table-condensed table-striped">
          <thead>
          <tr>
            <th class="text-center">Bib</th>
            <th>Name</th>
            <th>Category</th>
            <th>From</th>
            <th class="text-center">Valid Reported Time<br/><%= "Prior To #{@aid_station_detail.split_name}" %></th>
            <th class="text-center"><%= "Missed at #{@aid_station_detail.split_name}" %></th>
            <th class="text-center">Reported Time<br/><%= "After #{@aid_station_detail.split_name}" %></th>
          </tr>
          </thead>
          <tbody>
          <% @aid_station_detail.missed_effort_data.each do |row| %>
              <tr>
                <td class="text-center"><%= row[:bib_number] %></td>
                <td class="text-nowrap">
                  <strong><%= link_to row[:full_name], effort_path(row[:effort_id]) %></strong></td>
                <td class="text-nowrap"><%= row[:bio_historic] %></td>
                <td class="text-nowrap"><%= row[:state_and_country] %></td>
                <td class="text-center text-nowrap"><%= display_progress_info(row[:prior_to_here_info]) %></td>
                <td class="text-center text-nowrap"><%= display_progress_lap_and_times(row[:recorded_here_info]) %></td>
                <td class="text-center text-nowrap"><%= display_progress_info(row[:after_here_info]) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
</div>