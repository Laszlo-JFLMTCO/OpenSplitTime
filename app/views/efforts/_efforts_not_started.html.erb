<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Bib&num;</th>
    <th>Category</th>
    <th>From</th>
    <th>Get Notifications</th>
  </tr>
  </thead>
  <tbody>
  <% @event_display.effort_preview_rows.each do |effort_preview_row| %>
      <td><strong><%= link_to effort_preview_row.full_name, effort_path(effort_preview_row.effort) %></strong></td>
      <td><%= effort_preview_row.bib_number %></td>
      <td><%= effort_preview_row.bio_historic %></td>
      <td><%= effort_preview_row.state_and_country %></td>
      <td>
        <%= div_for(effort_preview_row.participant) do %>
            <%= link_to_toggle_email_subscription(effort_preview_row.participant) %>
        <% end %>
      </td>
      </tr>
  <% end %>
  </tbody>
</table>