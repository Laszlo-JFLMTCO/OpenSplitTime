<h1 align="center"><%= @race.name %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= @race.description %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <%= link_to 'Create New Event', new_event_path(race_id: @race.id), class: "btn btn-sm btn-primary" %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h4>Events associated with this race:</h4>
  </div>
</div>

<%= render 'events/event', obj: @race_events %>
