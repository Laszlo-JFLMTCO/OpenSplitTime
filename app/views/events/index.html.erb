<% content_for :title do %>
    <% if params[:search].present? %>
        <% "OpenSplitTime: Search events - #{params[:search]}" %>
    <% else %>
        <% "OpenSplitTime: Search events" %>
    <% end %>
<% end %>
<div class="row">
  <div class="col col-xs-4">
    <h2>Events</h2>
  </div>
  <div class="col-xs-3 text-right">
    <%= link_to 'Create event on existing course', new_event_path,
                class: 'btn btn-sm btn-success btn-margin-lg' %>
  </div>
</div>

<%= render 'lookup' %>

<div class="row">
  <div class="col-xs-8">
    <%= will_paginate(inner_window: 2, outer_window: 0) %>
  </div>
</div>

<div class="row">
  <div class="col-xs-8">
    <% if @events.present? %>
        <%= render 'events', events: @events %>
    <% else %>
        <br/>
        <% if params[:search].blank? %>
            <p><strong>Enter an event name to search</strong></p>
        <% else %>
            <p><strong>No events match this search</strong></p>
        <% end %>
    <% end %>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-8">
    <%= will_paginate(inner_window: 2, outer_window: 0) %>
  </div>
</div>
