<%# Requires parameter obj(collection) %>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>From</th>
    <th>Efforts</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% obj.each do |participant| %>
      <tr>
        <td><strong><%= link_to participant.full_name, participant_path(participant) %></strong></td>
        <td><%= participant.bio %></td>
        <td><%= participant.state_and_country %></td>
        <td><%= pluralize(participant.efforts.count, 'effort') %></td>
        <% if @current_user && @current_user.authorized_to_edit?(participant) %>
            <td>
              <%= link_to 'Edit', edit_participant_path(participant), class: "btn btn-xs btn-primary" %>
              <%= link_to 'Delete', participant_path(participant), class: "btn btn-xs btn-danger",
                          method: :delete,
                          data: {confirm: 'Are you sure?'} %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
