<% content_for :title do %>
    <% "OpenSplitTime: Drop List - #{@event_dropped_display.name}" %>
<% end %>
<div class="row header">
  <div class="col-xs-7">
    <h2><strong><%= "#{@event_dropped_display.name}: Drop List" %></strong>
    </h2>
  </div>
  <div class="col-xs-5 page-navigation">
    <%= link_to 'View Event', event_path(@event), class: 'btn btn-sm btn-primary' %>
    <div class="btn-group">
      <%= link_to 'Live entry', live_entry_live_event_path(@event), class: 'btn btn-sm btn-warning' %>
      <%= link_to 'Progress', progress_report_live_event_path(@event), class: 'btn btn-sm btn-warning' %>
      <%= link_to 'Aid stations', aid_station_report_live_event_path(@event), class: 'btn btn-sm btn-warning' %>
    </div>
  </div>
</div>

<% if @event_dropped_display.dropped_efforts_count < 1 %>
    <strong><%= "No runners have dropped as of #{l(Time.now, format: :full_with_weekday)} at #{l(Time.now, format: :military)}." %></strong>
<% else %>
    <div class="row">
      <div class="col-xs-8">
        <strong><%= "#{@event_dropped_display.dropped_efforts_count} #{@event_dropped_display.dropped_efforts_count == 1 ? 'runner has' : 'runners have'} dropped as of #{l(Time.now, format: :full_with_weekday)} at #{l(Time.now, format: :military)}." %></strong>
      </div>
    </div>

    <%= render 'efforts/efforts_dropped_list' %>

<% end %>
