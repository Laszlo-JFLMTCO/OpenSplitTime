<% content_for :title do %>
    <% "OpenSplitTime: Merge participants - #{@participant.full_name}" %>
<% end %>
<div class="row">
  <div class="col-xs-5">
    <h2><%= "#{@participant.last_name}, #{@participant.first_name}" %></h2>
  </div>
  <% if @proposed_match %>
      <div class="col-xs-2"><%= link_to '<< Merge into',
                                        combine_participant_path(@participant,
                                                                 target_id: @proposed_match.id),
                                        method: :put,
                                        class: 'btn btn-sm btn-success btn-margin-top' %>
      </div>
      <div class="col-xs-5">
        <h2><%= "#{@proposed_match.last_name}, #{@proposed_match.first_name}" %></h2>
      </div>
  <% else %>
      <div class="col-xs-4">
        <h2>[ No merge suggestions ]</h2>
      </div>
  <% end %>
</div>
<% participant_efforts_count = Effort.group("efforts.participant_id").count %>
<div class="row">
  <div class="col-xs-5">
    <%= render 'inspect', participant: @participant, efforts_count: participant_efforts_count[@participant.id] %>
  </div>
  <% if @proposed_match %>
      <div class="col-xs-2"><%= link_to 'Merge with >>',
                                        combine_participant_path(@proposed_match,
                                                                 target_id: @participant.id),
                                        method: :put,
                                        class: 'btn btn-sm btn-success btn-margin-top' %>
      </div>
      <div class="col-xs-5">
        <%= render 'inspect', participant: @proposed_match, efforts_count: participant_efforts_count[@proposed_match.id] %>
      </div>
  <% end %>
</div>

<hr>
<div class="row">
  <div class="col-xs-5">
    <%= link_to '<< Back to participant page', participant_path(@participant), class: "btn btn-sm btn-default" %>
  </div>
</div>
<hr>

<% if @proposed_matches.present? %>
    <%= render 'participants/participants', participants: @proposed_matches, efforts_count: participant_efforts_count %>
<% end %>