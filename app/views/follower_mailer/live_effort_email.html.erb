<!doctype html>
<html lang="en">
<head>
  <meta content='text/html; charset=UTF-8' http-equiv="Content-Type"/>
</head>
<body>
<%= "Hello #{@follower.first_name}," %><br/><br/>
<%= "The following new times were reported for #{@effort_data[:full_name]} at #{@effort_data[:event_name]}:" %>
<% @effort_data[:split_times_data].each do |split_time_data| %>
    <p>
      <%= follower_update_body_text(split_time_data) %>
    </p>
<% end %>
<br/>
<%= link_to "To see full effort click here", effort_url(@effort_data[:effort_id]) %>
<br/>
<br/>
<%= link_to "To see all results click here", spread_event_url(@effort_data[:event_id]) %>
<br/>
<br/>
<p><strong>Thank you for using OpenSplitTime!</strong></p>
</body>
</html>