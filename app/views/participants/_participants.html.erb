<%# Requires parameter participants %>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>From</th>
    <th>Efforts</th>
  </tr>
  </thead>
  <tbody>
  <% participants.each do |participant| %>
      <tr>
        <td><strong><%= link_to participant.full_name, participant_path(participant) %></strong></td>
        <td><%= participant.bio %></td>
        <td><%= participant.state_and_country %></td>
        <td><%= pluralize(@participant_efforts_count[participant.id] ||= 0, 'effort') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
