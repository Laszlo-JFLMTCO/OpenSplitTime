<div class="row header">

  <div class="col-xs-8 page-title">
    <h2></h2>
    <%= content_tag "div", id: "js-event-id", "data-event-id": params[:id] do %><% end %>
  </div>

  <div class="col-xs-4 page-navigation">
    <%= link_to 'Live entry', live_entry_live_event_path(@event), disabled: true, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Progress report', progress_report_live_event_path(@event), class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Aid station report', aid_station_report_live_event_path(@event), class: 'btn btn-sm btn-primary' %>
  </div>

</div>
<div class="row form-split-wrapper">

  <div class="col-xs-12 col-sm-4 live-entry">
    <form id="js-add-effort-form">
      <div class="form-group clearfix">
        <label class="col-xs-4" for="split-select">Aid Station</label>
        <div class="col-xs-8">
          <select id="split-select" name="split-select" class="form-control" autofocus>Aid Station</select>
        </div>
      </div>
      <div class="form-group clearfix">
        <label class="col-xs-4" for="js-bib-number">Bib #</label>
        <div class="col-xs-8">
          <input type="text" id="js-bib-number" name="bibNumber" class="form-control" placeholder="Bib #" autocomplete="off" value="" style="text-align: left;">
        </div>
      </div>
      <div class="form-group clearfix">
        <label class="col-xs-4" for="js-time-in">Time In</label>
        <div class="col-xs-8">
          <div class="input-group">
            <input id="js-time-in" type="text" name="timeIn" class="form-control" value="">
            <span class="input-group-addon time-exists">
              <span class="glyphicon glyphicon-exclamation-sign" title="Data Already Exists" data-toggle="tooltip" data-placement="right"></span>
            </span>
            <span class="input-group-addon time-status">
              <span class="glyphicon glyphicon-circle-arrow-left null" title="Enter Time Data" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-ok-sign good text-success" title="Time Appears Good" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-question-sign questionable text-warning" title="Time Appears Questionable" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-remove-sign bad text-danger" title="Time Appears Bad" data-toggle="tooltip" data-placement="right"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group clearfix">
        <label class="col-xs-4" for="js-time-out">Time Out</label>
        <div class="col-xs-8">
          <div class="input-group">
            <input id="js-time-out" type="text" name="timeOut" class="form-control" value="">
            <span class="input-group-addon time-exists">
              <span class="glyphicon glyphicon-exclamation-sign" title="Data Already Exists" data-toggle="tooltip" data-placement="right"></span>
            </span>
            <span class="input-group-addon time-status">
              <span class="glyphicon glyphicon-circle-arrow-left null" title="Enter Time Data" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-ok-sign good text-success" title="Time Appears Good" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-question-sign questionable text-warning" title="Time Appears Questionable" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-remove-sign bad text-danger" title="Time Appears Bad" data-toggle="tooltip" data-placement="right"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group clearfix">
        <label class="col-xs-4" for="pacer">Pacer</label>
        <div class="col-xs-8">
          <label class="checkbox-inline" for="js-pacer-in">
            <input id="js-pacer-in" type="checkbox" name="pacerIn" value="true"> In
          </label>
          <label class="checkbox-inline" for="js-pacer-out">
            <input id="js-pacer-out" type="checkbox" name="pacerOut" value="true"> Out
          </label>
        </div>
      </div>
      <div class="col-xs-8 col-xs-offset-2 col-sm-offset-4">
        <input id="js-effort-id" type="hidden" name="effort-id" value="">
        <input id="js-live-bib" type="hidden" name="live-bib" value="">
        <button id="js-add-to-cache" type="submit" class="btn btn-primary">Add</button>
        <button id="js-clear-entry-form" type="submit" class="btn btn-danger">Clear</button>
      </div>
    </form>
  </div>

  <div class="col-xs-12 col-sm-8 splits-slider">
    <div class="col-xs-12">
      <div id="js-split-slider" class="splits-slider-plotter">
      </div>
    </div>
    <div class="splits-slider-data col-xs-12">
      <div class="col-xs-6 data-label active">Name:</div>
      <div id="js-effort-name" class="col-xs-6">&nbsp;</div>

      <div class="col-xs-6 data-label">Last Reported:</div>
      <div id="js-effort-last-reported" class="col-xs-6 ">&nbsp;</div>

      <div class="col-xs-6 data-label">Prior Valid Reported:</div>
      <div id="js-prior-valid-reported" class="col-xs-6">&nbsp;</div>

      <div class="col-xs-6 data-label">Time From Prior Valid Reported:</div>
      <div id="js-time-prior-valid-reported" class="col-xs-6">&nbsp;</div>

      <div class="col-xs-6 data-label">Time Spent:</div>
      <div id="js-time-spent" class="col-xs-6">&nbsp;</div>
    </div>
  </div>

</div>

<div class="row provisional-data">

  <div class="col-xs-12">
    <h3>Local Data Workspace</h3>
    <div class="provisional-table-wrapper">
      <table id="js-provisional-data-table" class="table table-striped provisional-data-table">
        <thead>
        <tr>
          <th>Aid Station</th>
          <th>Bib&num;</th>
          <th>Time In</th>
          <th>Time Out</th>
          <th>Pacer In?</th>
          <th>Pacer Out?</th>
          <th>Name</th>
          <th data-orderable="false">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
          <tr style="display: none">
            <td data-order="0"></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-xs-12 col-md-8 col-md-offset-4 table-submit-wrapper">
    <span class="btn btn-primary fileinput-button">
      <span>Import File</span>
      <input id="js-file-upload" type="file" name="files[]"/>
    </span>
    <button id="js-import-from-file" class="btn btn-primary">Import File</button>
    <div class="btn-group" role="group">
      <button id="js-delete-all-efforts" class="btn btn-danger">Delete All</button>
      <button id="js-delete-all-warning" class="btn btn-danger" disabled>Cannot Be Undone</button>
    </div>
    <button id="js-submit-all-efforts" class="btn btn-success">Submit All</button>
  </div>

</div>
