<h1 align="center">Listing All Splits</h1>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <%= link_to 'Create New Split', new_split_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
<hr>

<%= render 'split', obj: @splits, page: "splits/index" %>

<p>
  Download:
  <%= link_to "CSV", splits_path(format: "csv") %> |
  <%= link_to "Excel", splits_path(format: "xls") %> |
  <%= link_to "JSON", splits_path(format: "json") %>
</p>

