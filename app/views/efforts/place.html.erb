<% content_for :title do %>
    <% "OpenSplitTime: Place detail - #{@effort_place.full_name} - #{@effort_place.event_name}" %>
<% end %>
<div class="row">
  <div class="col-xs-12">
    <h2>
      Place detail:
      <% if @effort_place.participant %>
          <%= link_to @effort_place.full_name, participant_path(@effort_place.participant) %>
      <% else %>
          <%= @effort_place.full_name %>
      <% end %>
      <%= "(#{@effort_place.bib_number})" if @effort_place.bib_number %>
      • <%= link_to @effort_place.event_name, event_path(@effort_place.event) %>
    </h2>
    <% overall_place, gender_place = @effort_place.combined_places %>
    <h3><%= "#{@effort_place.finish_status} • #{overall_place.ordinalize} Place • #{gender_place.ordinalize} #{@effort_place.gender.titleize}" %></h3>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-6">
    <%= link_to "< #{@effort_place.event_name}", event_path(@effort_place.event), class: "btn btn-sm btn-default" %>
  </div>
  <div class="col-xs-6">
    <div class="text-right">
      <div class="btn-group">
        <%= link_to "View times", effort_path(@effort_place.effort), class: "btn btn-sm btn-primary" %>
        <%= link_to "Analyze times", analyze_effort_path(@effort_place.effort), class: "btn btn-sm btn-primary" %>
        <%= link_to "Places and peers", place_effort_path(@effort_place.effort), disabled: true, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>
<hr>

<% if @effort_place.place_detail_rows.count > 0 %>
    <%= render 'place_detail_rows' %>
<% end %>
