<%# Requires parameter events %>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Details</th>
  </tr>
  </thead>
  <tbody>
  <% events.each do |event| %>
      <tr>
        <td><strong><%= link_to event.name, event_path(event) %></strong></td>
        <td><%= event.first_start_time.to_date.to_formatted_s(:long) %></td>
        <td><%= "#{pluralize(event.efforts.count, 'effort')}" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
