<div class="row">
  <div class="col-xs-6">
    <h2><%= @course.name %></h2>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
    <%= @course.description %>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-6">
    <%= link_to '<< Show All Courses', courses_path, class: 'btn btn-sm btn-default' %>
    <%= link_to '< Back', :back, class: 'btn btn-sm btn-default' %>
    <% if @current_user && @current_user.authorized_to_edit?(@course) %>
        <%= link_to 'Edit this course', edit_course_path(@course), class: 'btn btn-sm btn-primary' %>
        <%= link_to 'Delete this course', course_path(@course, referrer_path: courses_path),
                    method: :delete,
                    data: {confirm: 'NOTE: This will delete the course and all associated splits. This action cannot be undone. Are you sure you want to go ahead?'},
                    class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>
<hr>

<div class="article-actions">
  <% if @current_user && @current_user.authorized_to_edit?(@course) %>
      <%= link_to 'Create new split', new_split_path(course_id: @course.id), class: 'btn btn-sm btn-success' %>
  <% end %>
  <%= link_to 'Plan my effort', plan_effort_course_path(@course), method: :get, class: 'btn btn-sm btn-default' %>
  <%= link_to 'All-time best efforts >>', best_efforts_course_path(@course), class: 'btn btn-sm btn-default' %>
</div>
<hr>

<% if @course_splits && @course_splits.count > 0 %>
    <div class="row">
      <div class="col-xs-8">
        <h4><%= "Total of #{@course.splits.count} splits on #{@course.name}" %></h4>
      </div>
    </div>
    <%= render 'splits/splits', splits: @course_splits, referred_by: course_path(@course) %>
<% end %>