<div class="row">
  <div class="col-xs-12">
    <h3><%= "#{@current_user.full_name}" %></h3>
    <h1>
      <%= "#{@course.name} pacing plan" %>
      <% if expected_time %>
      <%= "| #{time_format_hhmm(expected_time)} goal time" %>
      <% end %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <% if expected_time %>
        <h3><%=  %></h3>
            <h3><%= "Analyzed #{pluralize(efforts_analyzed, 'effort')} from years #{event_years_analyzed.to_sentence}" %></h3>
    <% end %>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-6">
    <%= link_to '<< Back to course splits', course_path(@course), class: "btn btn-sm btn-default" %>
    <%= link_to '< Back', :back, class: "btn btn-sm btn-default" %>
  </div>
</div>
<hr>

<%= render 'time_input' %>

<hr>
<% if expected_time %>
    <% if efforts_analyzed > 0 %>
    <%= render 'plan_detail', splits: @event.base_splits,
               time_data: normalize_time_data(@event.splits.average_times(expected_time), expected_time) %>
        <% else %>
          <h4>Found no efforts close to that time.</h4>
        <% end %>
<% end %>
